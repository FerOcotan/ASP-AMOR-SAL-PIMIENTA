<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sidebar</title>
    <link rel="stylesheet" href="~/Content/sidebar.css">
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="menu">
        <ion-icon name="menu-outline"></ion-icon>
        <ion-icon name="close-outline"></ion-icon>
    </div>

    <div class="barra-lateral">
        <div>
            <div class="nombre-pagina">

                <a href="/Home">
                    <div class="logo-container" id="cloud">
                        <img src='~/Content/Imagenes/Logo.png' alt="ASP" class="logo">
                    </div>
                </a>

            </div>
            <a class="boton" href="/Orden" style="text-decoration: none;">
                <ion-icon name="add-outline"></ion-icon>
                <span> New Orden </span>
            </a>
        </div>

        <nav class="navegacion">
            <ul>
                <li>
                    <a id="inbox" href="@Url.Action("Kitchen", "Detalle")">

                        <ion-icon name="fast-food-outline"></ion-icon>
                        <span>Kitchen</span>
                    </a>
                </li>
                <li>
                    <a href="/producto">
                        <ion-icon name="build-outline"></ion-icon>
                        <span>Admin</span>
                    </a>
                </li>
                <!-- Add other menu items here -->
            </ul>
        </nav>

        <div>
            <div class="linea"></div>

            <div class="modo-oscuro">
                <div class="info">
                    <ion-icon name="moon-outline"></ion-icon>
                    <span>DarkMode</span>
                </div>
                <div class="switch">
                    <div class="base">
                        <div class="circulo">

                        </div>
                    </div>
                </div>
            </div>

            <div class="usuario">

                <div class="info-usuario">
                    <div class="nombre-email">
                        <span class="nombre">Amor-Sal-Pimienta</span>
                        <span class="email">ASP@gmail.com</span>
                    </div>



                    <ion-icon name="exit-outline"></ion-icon>


                </div>
            </div>
        </div>

    </div>

    <main>
        @RenderBody() <!-- Render ASP.NET dynamic content here -->
        <li>@Html.ActionLink("Salir", "CerrarSesion", "Home", new { area = "" }, new { @class = "nav-link" })</li>

    </main>

    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    <script src="~/Content/Navbar.js"></script>
    @Scripts.Render("~/bundles/jquery")

    @RenderSection("scripts", required: false)
</body>
</html>
